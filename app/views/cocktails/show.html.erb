<div class="container">
  <h1><%= @cocktail.name %></h1>

  <% @cocktail.doses.each do |dose| %>
  <p><%= dose.ingredient.name %></p>
  <% end %>
  <%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient %>
 <%= f.button :submit %>
<% end %>
</div>
